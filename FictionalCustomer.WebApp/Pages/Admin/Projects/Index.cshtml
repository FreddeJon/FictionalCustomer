@page
@model FictionalCustomer.WebApp.Pages.Admin.Projects.IndexModel

@{
    ViewData["Title"] = "Admin - Dashboard";
}

<div class="website-background">
    <div class="dashboard-center">
        <h6 class="display-6">Admin | Projects | Dashboard</h6>
    </div>

    <p class="create-new">
        <a asp-page="Create">
            Create New
            <svg style="align-self:center;" xmlns="http://www.w3.org/2000/svg" width="16" height="20" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
            </svg>
        </a>
    </p>
    <div class="container" style="padding: 0;">
        <br />
        <div style="width:100%; margin:0;">
            <table id="admin-projects-datatables" class="table" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Company</th>
                        <th>Project Title</th>
                        <th>Project Budget</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>